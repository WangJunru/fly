<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@color/white"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="20dp">
    <TextView android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:singleLine="true"
        android:textSize="@dimen/pt_17"
        android:text="标题"/>
      <TextView android:id="@+id/content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_tv"
        android:textColor="#ffa9a9a9"
        android:textSize="@dimen/pt_16"
        android:singleLine="false"
        android:layout_marginTop="2dp"
        android:text="标题"/>
        <TextView android:id="@+id/date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_below="@+id/content_tv"
        android:textColor="#ffe6e6e6"
        android:textSize="@dimen/pt_14"
        android:layout_marginTop="2dp"
        android:singleLine="true"
        android:text="标题"/>
    
      <ImageView  android:layout_alignParentRight="true"
          android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/arrow_left"
        android:layout_marginRight="10dp"/>
</RelativeLayout>
