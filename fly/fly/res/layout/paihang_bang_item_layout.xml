<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/item_info_con"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_picture_round"
        android:layout_marginTop="-30dp"
        android:background="@drawable/paihang_item_0"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/user_score_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="100åˆ†"
            android:textColor="@color/white"
            android:textSize="@dimen/pt_25" />

        <TextView
            android:id="@+id/user_score_time_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="2014-11-29"
            android:textColor="@color/white"
            android:textSize="@dimen/pt_20" />
    </RelativeLayout>

    <com.fly.view.RoundImageView
        android:id="@+id/user_picture_round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="@drawable/user_pic_bg"
        android:clickable="true"
        android:contentDescription="@string/app_name"
        android:scaleType="centerInside"
        android:src="@drawable/default_user_pic"
        imagecontrol:border_outside_color="@color/white"
        imagecontrol:border_thickness="2dp" />

    <TextView
        android:id="@+id/user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_picture_round"
        android:textColor="@color/white"
        android:textSize="@dimen/pt_16"
        android:text="dddfddf" 
        android:layout_marginLeft="20dp"/>

</RelativeLayout>