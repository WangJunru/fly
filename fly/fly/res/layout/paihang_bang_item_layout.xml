<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/item_info_con"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ph_user_picture_round"
        android:layout_marginTop="-30dp"
        android:background="@drawable/paihang_item_0"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/user_score_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="100åˆ†"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:textSize="@dimen/pt_22" />

        <TextView
            android:id="@+id/user_score_time_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="2014-11-29"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="@dimen/pt_17" />
    </RelativeLayout>

   <!--   android:background="@drawable/phb_user_bg" -->
    <com.fly.ui.view.RoundImageView
        android:id="@+id/ph_user_picture_round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/phb_user_bg"
        android:layout_marginLeft="20dp"   
        android:clickable="true"
        android:contentDescription="@string/app_name"
        android:scaleType="centerInside"
        android:src="@drawable/phb_default_uer_pic"
        imagecontrol:border_outside_color="@color/white"
        imagecontrol:border_thickness="2dp" />

    <TextView
        android:id="@+id/user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ph_user_picture_round"
        android:layout_alignLeft="@+id/ph_user_picture_round"
        android:layout_alignRight="@+id/ph_user_picture_round"
        android:textColor="@color/white"
        android:textSize="@dimen/pt_16"
        android:singleLine="false"
        android:gravity="center"
        android:text="dddfddf" />

</RelativeLayout>