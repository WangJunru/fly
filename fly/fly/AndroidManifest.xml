<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fly"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE"/>

    <application
        android:name="com.fly.app.FlyApplication"
        android:allowBackup="true"
        android:icon="@drawable/share"
        android:label="@string/app_name"
        android:theme="@style/flyAppTheme" >
        <activity
            android:name="com.fly.ui.activity.MainActivity"
            android:configChanges="mcc|keyboard|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.fly.ui.activity.GuideActivity"
            android:configChanges="mcc|keyboard|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.fly.ui.activity.LoginActivity"
            android:configChanges="mcc|keyboard|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.fly.ui.activity.QuizActivity"
            android:configChanges="mcc|keyboard|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.fly.ui.activity.RegistActivity"
            android:configChanges="mcc|keyboard|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.fly.ui.activity.ForgotPasswdActivity"
            android:configChanges="mcc|keyboard|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.fly.ui.activity.UserCenter"
            android:configChanges="mcc|keyboard|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.fly.ui.activity.ResultActivity"
            android:configChanges="mcc|keyboard|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.fly.ui.activity.FlyProductDetails"
            android:configChanges="mcc|keyboard|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
         <activity
            android:name="com.fly.ui.activity.PaiHangBangActivity"
            android:configChanges="mcc|keyboard|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
    </application>

</manifest>